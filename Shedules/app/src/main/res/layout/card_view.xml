<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/img_transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_train"
            tools:ignore="VectorDrawableCompat" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold|italic"
                tools:text="Киров — Анапа" />

            <TextView
                android:id="@+id/numberTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTV"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                tools:text="I8 606" />

            <TextView
                android:id="@+id/companyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberTV"
                android:layout_marginStart="3dp"
                android:textColor="@color/colorBlack"
                tools:text="Ижавиа" />

            <TextView
                android:id="@+id/vehicleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/companyTV"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                tools:text="ЯК-42" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicleTV"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_dates"
                tools:ignore="VectorDrawableCompat" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_days"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_time"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/daysTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vehicleTV"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                tools:text="вс с 16.06 по 08.09" />

            <TextView
                android:id="@+id/departureTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/daysTV"
                android:layout_marginStart="35dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/colorBlack"
                tools:text="2019-06-16 09:00:00" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_save" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>